<div class="container" style="margin: 100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar un presupuesto</h4>
            <form action="/admin/presupuestos/agregar" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Titulo" name="titulo" required>
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" placeholder="Descripcion" name="descripcion" required></textarea>
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" placeholder="Precio" name="Precio" step="0.01" required></textarea>
                </div>
                <div class="form-group">
                    <label>Imagen: <input type="file"  class="form-control" name="imagen" id="imagen" /></label>
                </div>
                
                <button type="submit" class="btn btn-primary">Guardar</button>

            </form>
            {{#if error}}
              <h5>{{message}}</h5>
            {{/if}}  
        </div>
    </div>
</div>