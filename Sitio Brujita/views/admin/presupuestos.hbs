<div class="container" style="margin-top: 100px;">
    <div class="row">
        <div class="col">
            <p style="float:right;">
                Hola {{persona}} !
                <a href="/admin/login" class="btn btn-sm btn-danger">Cerrar sesion<i class="fas fa-sign-out-alt"></i></a></p>
        </div>
    </div>
    {{!--inicia fila 2--}}
     <div class="row">
        <div class="col-7" style="margin-top: -9px;">
            <h3>Listado de Presupuestos</h3>
        </div>
        <div class="col-2 text-right">
            <a href="/admin/presupuestos/agregar" class="btn btn-success"><i class="fas fa-plus"></i>Promociones</a>
        </div>
    </div>
    {{!--fin fila 2--}}
    {{!--Inicio de tabla--}}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Descripcion</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Imagen</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each presupuestos}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{Titulo}}</td>
                        <td>{{Descripcion}}</td>
                        <td>{{Precio}}</td>
                        <td><img src="{{imagen}}" alt="Imagen del Presupuesto" width="100" height="100"></td>
                        <td>{{Acciones}}</td>
                        <td class="text-center">
                        <a href="/admin/presupuestos/modificar/{{id}}" title="Editar" class="btn btn-sm btn-secondary edit-button" >
                         <i class="fas fa-edit"></i>  Editar  
                        </a>
                        <a href="/admin/presupuestos/eliminar/{{id}}" title="Elimnar" class="btn btn-sm btn-secondary delete-button">
                        <i class="fas fa-trash"></i> Eliminar
                        </a>
                    </td>
                    </tr> 
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    {{!--Fin fila 3--}}

</div>




